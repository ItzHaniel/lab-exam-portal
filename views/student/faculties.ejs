<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary-custom fixed-top">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light d-lg-none me-2" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <a class="navbar-brand d-flex align-items-center" href="/student/dashboard">
                    <img src="/images/logo.png" alt="Logo" width="32" height="32" class="rounded-circle me-2">
                    <span class="fw-bold">Lab Exam Portal</span>
                </a>
            </div>
            
            <div class="dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
                   href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                    <img src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                        alt="Avatar" width="32" height="32" class="rounded-circle me-2" id="navbarAvatar">
                    <span class="d-none d-sm-inline">
                        <%= user.firstName %> <%= user.lastName %>
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="dropdown-header">
                            <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                            <small class="text-muted"><%= user.email %></small><br>
                            <span class="badge bg-primary"><%= user.role %></span>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/student/settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a></li>
                    <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="text-white mb-0">Student Portal</h5>
            <small class="text-white-50">Academic Dashboard</small>
        </div>
        
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/student/dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/classes">
                    <i class="bi bi-book"></i>
                    <span>My Classes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/exams">
                    <i class="bi bi-calendar-event"></i>
                    <span>Upcoming Exams</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/results">
                    <i class="bi bi-bar-chart"></i>
                    <span>Latest Results</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/student/faculties">
                    <i class="bi bi-people"></i>
                    <span>Faculty Contacts</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">
                            <i class="bi bi-people me-2"></i>
                            Faculty Contacts
                        </h1>
                        <p class="page-subtitle">Connect with your course instructors and academic advisors</p>
                    </div>
                    <div class="col-auto">
                        <div class="badge bg-info fs-6">
                            <i class="bi bi-person-badge me-1"></i>
                            <%= faculties.length %> Faculty Members
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Search and Filter -->
            <div class="mb-4">
                <div class="card card-custom">
                    <div class="card-body py-3">
                        <div class="row align-items-center">
                            <div class="col-md-8">
                                <div class="search-container">
                                    <div class="input-group">
                                        <span class="input-group-text">
                                            <i class="bi bi-search"></i>
                                        </span>
                                        <input type="text" 
                                               class="form-control" 
                                               id="facultySearch"
                                               placeholder="Search faculty by name, subject, or email...">
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="filter-options d-flex justify-content-end gap-2">
                                    <button class="btn btn-outline-primary btn-sm" onclick="showAllFaculties()">
                                        <i class="bi bi-grid me-1"></i>All
                                    </button>
                                    <button class="btn btn-outline-success btn-sm" onclick="showFavoriteFaculties()">
                                        <i class="bi bi-star me-1"></i>Favorites
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Faculty Cards -->
            <% if (faculties.length > 0) { %>
                <div class="row" id="facultyContainer">
                    <% faculties.forEach(faculty => { %>
                        <div class="col-lg-6 col-xl-4 mb-4 faculty-item" 
                             data-name="<%= faculty.firstName %> <%= faculty.lastName %>"
                             data-email="<%= faculty.email %>"
                             data-subjects="<%= faculty.classes.map(c => c.subject).join(',') %>">
                            
                            <div class="card card-custom faculty-card">
                                
                                <!-- Faculty Header -->
                                <div class="card-header faculty-header">
                                    <div class="d-flex align-items-center">
                                        <div class="faculty-avatar me-3">
                                            <img src='/images/default-avatar.png'<%= faculty.firstName.charAt(0) + faculty.lastName.charAt(0) %>" 
                                                 alt="Faculty Avatar" 
                                                 class="rounded-circle"
                                                 width="60" height="60">
                                            <div class="online-status online"></div>
                                        </div>
                                        <div class="faculty-info flex-grow-1">
                                            <h5 class="faculty-name mb-1">
                                                <%= faculty.firstName %> <%= faculty.lastName %>
                                            </h5>
                                            <div class="faculty-role">
                                                <span class="badge bg-primary">Faculty</span>
                                                <span class="badge bg-secondary ms-1">
                                                    <i class="bi bi-mortarboard me-1"></i>Instructor
                                                </span>
                                            </div>
                                        </div>
                                        <div class="faculty-actions">
                                            <button class="btn btn-outline-warning btn-sm favorite-btn" 
                                                    onclick="toggleFavorite('<%= faculty._id %>', this)"
                                                    title="Add to Favorites">
                                                <i class="bi bi-star"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Faculty Body -->
                                <div class="card-body">
                                    
                                    <!-- Contact Information -->
                                    <div class="contact-section mb-3">
                                        <h6 class="section-title">
                                            <i class="bi bi-envelope me-2"></i>
                                            Contact Information
                                        </h6>
                                        <div class="contact-items">
                                            <div class="contact-item">
                                                <i class="bi bi-envelope-fill text-primary me-2"></i>
                                                <span class="contact-label">Email:</span>
                                                <a href="mailto:<%= faculty.email %>" class="contact-value">
                                                    <%= faculty.email %>
                                                </a>
                                            </div>
                                            <div class="contact-item">
                                                <i class="bi bi-telephone-fill text-success me-2"></i>
                                                <span class="contact-label">Office:</span>
                                                <span class="contact-value text-muted">Available on request</span>
                                            </div>
                                            <div class="contact-item">
                                                <i class="bi bi-geo-alt-fill text-danger me-2"></i>
                                                <span class="contact-label">Location:</span>
                                                <span class="contact-value text-muted">Faculty Building</span>
                                            </div>
                                        </div>
                                    </div>
                                    
                                    <!-- Subjects Taught -->
                                    <div class="subjects-section mb-3">
                                        <h6 class="section-title">
                                            <i class="bi bi-book me-2"></i>
                                            Subjects & Classes
                                        </h6>
                                        <div class="subjects-list">
                                            <% faculty.classes.forEach(classItem => { %>
                                                <div class="subject-item">
                                                    <div class="subject-header">
                                                        <span class="subject-name">
                                                            <%= classItem.subject %>
                                                        </span>
                                                        <span class="class-code">
                                                            <%= classItem.classCode %>
                                                        </span>
                                                    </div>
                                                    <div class="class-name text-muted small">
                                                        <%= classItem.className %>
                                                    </div>
                                                </div>
                                            <% }); %>
                                        </div>
                                    </div>
                                    
                                    <!-- Office Hours -->
                                    <div class="office-hours-section mb-3">
                                        <h6 class="section-title">
                                            <i class="bi bi-clock me-2"></i>
                                            Office Hours
                                        </h6>
                                        <div class="office-hours">
                                            <div class="office-hour-item">
                                                <span class="day">Monday - Friday:</span>
                                                <span class="time">9:00 AM - 5:00 PM</span>
                                            </div>
                                            <div class="office-hour-item">
                                                <span class="day">Saturday:</span>
                                                <span class="time">9:00 AM - 1:00 PM</span>
                                            </div>
                                            <div class="availability-note">
                                                <small class="text-muted">
                                                    <i class="bi bi-info-circle me-1"></i>
                                                    Please email before visiting
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                    
                                </div>
                                
                                <!-- Faculty Footer - CLEANED UP -->
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex gap-2">
                                        <a href="mailto:<%= faculty.email %>" 
                                        class="btn btn-primary btn-sm flex-fill">
                                            <i class="bi bi-envelope me-1"></i>
                                            Send Email
                                        </a>
                                        <a href="mailto:<%= faculty.email %>?subject=Office Hours Inquiry" 
                                        class="btn btn-outline-info btn-sm flex-fill">
                                            <i class="bi bi-calendar-plus me-1"></i>
                                            Contact for Meeting
                                        </a>
                                    </div>
                                </div>

                                
                            </div>
                        </div>
                    <% }); %>
                </div>
                
                <!-- No Results Message -->
                <div id="noResults" class="card card-custom text-center py-4" style="display: none;">
                    <div class="card-body">
                        <i class="bi bi-search text-muted" style="font-size: 3rem;"></i>
                        <h5 class="mt-3 text-muted">No Faculty Found</h5>
                        <p class="text-muted">Try adjusting your search criteria</p>
                    </div>
                </div>
                
            <% } else { %>
                <!-- Empty State -->
                <div class="card card-custom text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-people text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-4 text-muted">No Faculty Contacts</h4>
                        <p class="text-muted">
                            You don't have any assigned faculty members yet.<br>
                            Please check back once you're enrolled in classes.
                        </p>
                        <a href="/student/classes" class="btn btn-primary">
                            <i class="bi bi-book me-2"></i>
                            View My Classes
                        </a>
                    </div>
                </div>
            <% } %>
            
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    
    <script>
        // Logout confirmation
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        // Sidebar toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 992 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target)) {
                sidebar.classList.remove('show');
            }
        });
        
        // Faculty search functionality
        document.getElementById('facultySearch').addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const facultyItems = document.querySelectorAll('.faculty-item');
            const noResults = document.getElementById('noResults');
            let visibleCount = 0;
            
            facultyItems.forEach(item => {
                const name = item.dataset.name.toLowerCase();
                const email = item.dataset.email.toLowerCase();
                const subjects = item.dataset.subjects.toLowerCase();
                
                if (name.includes(searchTerm) || email.includes(searchTerm) || subjects.includes(searchTerm)) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            noResults.style.display = visibleCount === 0 ? 'block' : 'none';
        });
        
        // Toggle favorite
        function toggleFavorite(facultyId, button) {
            const icon = button.querySelector('i');
            const isFavorite = icon.classList.contains('bi-star-fill');
            
            if (isFavorite) {
                icon.classList.remove('bi-star-fill');
                icon.classList.add('bi-star');
                button.classList.remove('btn-warning');
                button.classList.add('btn-outline-warning');
                showToast('Removed from favorites', 'info');
            } else {
                icon.classList.remove('bi-star');
                icon.classList.add('bi-star-fill');
                button.classList.remove('btn-outline-warning');
                button.classList.add('btn-warning');
                showToast('Added to favorites', 'success');
            }
        }
        
        // Show all faculties
        function showAllFaculties() {
            document.querySelectorAll('.faculty-item').forEach(item => {
                item.style.display = 'block';
            });
            document.getElementById('noResults').style.display = 'none';
            document.getElementById('facultySearch').value = '';
        }
        
        // Show favorite faculties only
        function showFavoriteFaculties() {
            const facultyItems = document.querySelectorAll('.faculty-item');
            let visibleCount = 0;
            
            facultyItems.forEach(item => {
                const favoriteBtn = item.querySelector('.favorite-btn i');
                if (favoriteBtn && favoriteBtn.classList.contains('bi-star-fill')) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });
            
            if (visibleCount === 0) {
                document.getElementById('noResults').style.display = 'block';
                document.querySelector('#noResults h5').textContent = 'No Favorite Faculty';
                document.querySelector('#noResults p').textContent = 'Add faculty to favorites by clicking the star icon';
            } else {
                document.getElementById('noResults').style.display = 'none';
            }
        }
        
        // Show toast notification
        function showToast(message, type = 'info') {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            toast.style.cssText = `
                top: 80px;
                right: 20px;
                z-index: 9999;
                min-width: 300px;
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            `;
            toast.innerHTML = `
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(toast);
            
            // Auto remove after 3 seconds
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(toast);
                bsAlert.close();
            }, 3000);
        }
        
        // Add hover effects to faculty cards
        document.querySelectorAll('.faculty-card').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>
    
</body>
</html>
