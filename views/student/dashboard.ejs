<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary-custom fixed-top">
        <div class="container-fluid">
            
            <!-- Brand & Toggle -->
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light d-lg-none me-2" 
                        type="button" 
                        id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <a class="navbar-brand d-flex align-items-center" href="/student/dashboard">
                    <img src="/images/logo.png" alt="Logo" width="32" height="32" class="rounded-circle me-2">
                    <span class="fw-bold">Lab Exam Portal</span>
                </a>
            </div>
            
            <!-- User Menu -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
                   href="#" 
                   id="userDropdown" 
                   role="button" 
                   data-bs-toggle="dropdown">
                    <img src="<%= user.profileImage || '/images/default-avatar.png' + user.firstName.charAt(0) + user.lastName.charAt(0) %>" 
                        alt="Avatar" width="32" height="32" class="rounded-circle me-2" id="navbarAvatar">
                    <span class="d-none d-sm-inline">
                        <%= user.firstName %> <%= user.lastName %>
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="dropdown-header">
                            <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                            <small class="text-muted"><%= user.email %></small><br>
                            <span class="badge bg-primary"><%= user.role %></span>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/student/settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a></li>
                    <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a></li>
                </ul>
            </div>
            
        </div>
    </nav>
    
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="text-white mb-0">Student Portal</h5>
            <small class="text-white-50">Academic Dashboard</small>
        </div>
        
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/student/dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/classes">
                    <i class="bi bi-book"></i>
                    <span>My Classes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/exams">
                    <i class="bi bi-calendar-event"></i>
                    <span>Upcoming Exams</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/results">
                    <i class="bi bi-bar-chart"></i>
                    <span>Latest Results</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/faculties">
                    <i class="bi bi-people"></i>
                    <span>Faculty Contacts</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">
                            <i class="bi bi-speedometer2 me-2"></i>
                            Dashboard
                        </h1>
                        <p class="page-subtitle">Welcome back, <%= user.firstName %>! Here's your academic overview.</p>
                    </div>
                    <div class="col-auto">
                        <span class="badge bg-success fs-6">
                            <i class="bi bi-calendar-date me-1"></i>
                            <%= moment().format('MMM DD, YYYY') %>
                        </span>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card card-custom">
                        <div class="stat-icon bg-primary">
                            <i class="bi bi-book"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalClasses %></h3>
                            <p>Enrolled Classes</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card card-custom">
                        <div class="stat-icon bg-warning">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalUpcomingExams %></h3>
                            <p>Upcoming Exams</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card card-custom">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-check-circle"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.completedExams %></h3>
                            <p>Completed Exams</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-sm-6 mb-3">
                    <div class="stat-card card-custom">
                        <div class="stat-icon bg-info">
                            <i class="bi bi-star"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.currentGPA %></h3>
                            <p>Current GPA</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content Row -->
            <div class="row">
                
                <!-- Left Column -->
                <div class="col-lg-8 mb-4">
                    
                    <!-- Upcoming Exams -->
                    <div class="card card-custom mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar-event me-2"></i>
                                Upcoming Exams
                            </h5>
                            <a href="/student/exams" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (upcomingExams.length > 0) { %>
                                <% upcomingExams.forEach(exam => { %>
                                    <div class="exam-item">
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <h6 class="mb-1"><%= exam.title %></h6>
                                                <p class="text-muted small mb-0">
                                                    <%= exam.classId.className %> (<%= exam.classId.classCode %>)
                                                </p>
                                            </div>
                                            <div class="col-md-3">
                                                <span class="badge bg-<%= exam.examType === 'ESE' ? 'danger' : exam.examType.includes('CIA') ? 'warning' : 'info' %>">
                                                    <%= exam.examType %>
                                                </span>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <small class="text-muted">
                                                    <%= moment(exam.scheduledDate).format('MMM DD, YYYY') %><br>
                                                    <%= exam.startTime %>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-calendar-x fs-1 mb-3"></i>
                                    <p>No upcoming exams scheduled</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Recent Grades -->
                    <div class="card card-custom">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-bar-chart me-2"></i>
                                Recent Results
                            </h5>
                            <a href="/student/results" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (recentGrades.length > 0) { %>
                                <% recentGrades.forEach(grade => { %>
                                    <div class="grade-item">
                                        <div class="row align-items-center">
                                            <div class="col-md-6">
                                                <h6 class="mb-1"><%= grade.classId.subject %></h6>
                                                <p class="text-muted small mb-0">
                                                    <%= grade.classId.classCode %>
                                                </p>
                                            </div>
                                            <div class="col-md-3">
                                                <% if (grade.letterGrade) { %>
                                                    <span class="grade-badge grade-<%= grade.letterGrade.replace('+', 'plus') %>">
                                                        <%= grade.letterGrade %>
                                                    </span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Pending</span>
                                                <% } %>
                                            </div>
                                            <div class="col-md-3 text-end">
                                                <% if (grade.percentage !== null) { %>
                                                    <strong><%= grade.percentage %>%</strong>
                                                <% } else { %>
                                                    <span class="text-muted">-</span>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-bar-chart fs-1 mb-3"></i>
                                    <p>No recent results available</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                </div>
                
                <!-- Right Column -->
                <div class="col-lg-4">
                    
                    <!-- Calendar Widget - FUNCTIONAL -->
                    <div class="card card-custom mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar me-2"></i>
                                <span id="calendarMonth">Calendar</span>
                            </h5>
                        </div>
                        <div class="card-body">
                            <div id="miniCalendar">
                                <div class="calendar-header d-flex justify-content-between align-items-center mb-3">
                                    <button class="btn btn-sm btn-outline-primary" id="prevMonth">
                                        <i class="bi bi-chevron-left"></i>
                                    </button>
                                    <h6 class="mb-0" id="currentMonth"></h6>
                                    <button class="btn btn-sm btn-outline-primary" id="nextMonth">
                                        <i class="bi bi-chevron-right"></i>
                                    </button>
                                </div>
                                <div class="calendar-grid">
                                    <div class="calendar-days-header">
                                        <div class="day-header">S</div>
                                        <div class="day-header">M</div>
                                        <div class="day-header">T</div>
                                        <div class="day-header">W</div>
                                        <div class="day-header">T</div>
                                        <div class="day-header">F</div>
                                        <div class="day-header">S</div>
                                    </div>
                                    <div class="calendar-days" id="calendarDays">
                                        <!-- Generated by JavaScript -->
                                    </div>
                                </div>
                                <div class="calendar-legend mt-3">
                                    <small class="text-muted">
                                        <span class="badge bg-danger me-1"></span>Exam Days
                                        <span class="badge bg-primary ms-2 me-1"></span>Today
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>

                    
                    <!-- Quick Actions -->
                    <div class="card card-custom">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-lightning me-2"></i>
                                Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/student/exams" class="btn btn-outline-primary">
                                    <i class="bi bi-calendar-event me-2"></i>
                                    View Exam Schedule
                                </a>
                                <a href="/student/results" class="btn btn-outline-success">
                                    <i class="bi bi-bar-chart me-2"></i>
                                    Check Results
                                </a>
                                <a href="/student/classes" class="btn btn-outline-info">
                                    <i class="bi bi-book me-2"></i>
                                    Browse Classes
                                </a>
                                <a href="/student/faculties" class="btn btn-outline-warning">
                                    <i class="bi bi-people me-2"></i>
                                    Contact Faculty
                                </a>
                            </div>
                        </div>
                    </div>
                    
                </div>
                
            </div>
            
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    
    <script>
        // Logout confirmation
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        // Sidebar toggle for mobile
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 992 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target)) {
                sidebar.classList.remove('show');
            }
        });

        // Calendar functionality - CLEAN VERSION
        let currentCalendarDate = new Date();
        let examDates = [];

        // Load exam dates from the page data
        function loadExamDates() {
            examDates = [];
            <% if (upcomingExams && upcomingExams.length > 0) { %>
                <% upcomingExams.forEach((exam, index) => { %>
                    examDates.push(new Date('<%= moment(exam.scheduledDate).format('YYYY-MM-DD') %>'));
                <% }); %>
            <% } %>
        }

        function renderCalendar() {
            const year = currentCalendarDate.getFullYear();
            const month = currentCalendarDate.getMonth();
            
            document.getElementById('currentMonth').textContent = 
                currentCalendarDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
            
            document.getElementById('calendarMonth').textContent = 
                currentCalendarDate.toLocaleDateString('en-US', { month: 'long', year: 'numeric' });
            
            const firstDay = new Date(year, month, 1).getDay();
            const daysInMonth = new Date(year, month + 1, 0).getDate();
            const daysInPrevMonth = new Date(year, month, 0).getDate();
            
            let calendarHTML = '';
            const today = new Date();
            
            // Previous month's trailing days
            for (let i = firstDay - 1; i >= 0; i--) {
                const day = daysInPrevMonth - i;
                calendarHTML += `<div class="calendar-day other-month">${day}</div>`;
            }
            
            // Current month's days
            for (let day = 1; day <= daysInMonth; day++) {
                const currentDate = new Date(year, month, day);
                const isToday = currentDate.toDateString() === today.toDateString();
                const hasExam = examDates.some(examDate => 
                    examDate.toDateString() === currentDate.toDateString()
                );
                
                let classes = 'calendar-day';
                if (isToday) classes += ' today';
                if (hasExam) classes += ' has-exam';
                
                calendarHTML += `<div class="${classes}" title="${hasExam ? 'Exam scheduled' : ''}">${day}</div>`;
            }
            
            // Next month's leading days
            const totalCells = Math.ceil((firstDay + daysInMonth) / 7) * 7;
            const remainingCells = totalCells - (firstDay + daysInMonth);
            for (let day = 1; day <= remainingCells; day++) {
                calendarHTML += `<div class="calendar-day other-month">${day}</div>`;
            }
            
            document.getElementById('calendarDays').innerHTML = calendarHTML;
        }

        // Calendar navigation
        document.getElementById('prevMonth')?.addEventListener('click', function() {
            currentCalendarDate.setMonth(currentCalendarDate.getMonth() - 1);
            renderCalendar();
        });

        document.getElementById('nextMonth')?.addEventListener('click', function() {
            currentCalendarDate.setMonth(currentCalendarDate.getMonth() + 1);
            renderCalendar();
        });

        // Initialize calendar when page loads
        document.addEventListener('DOMContentLoaded', function() {
            loadExamDates();
            renderCalendar();
        });

    </script>
    
</body>
</html>
