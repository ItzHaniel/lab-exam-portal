<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary-custom fixed-top">
        <div class="container-fluid">
            
            <!-- Brand & Toggle -->
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light d-lg-none me-2" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <a class="navbar-brand d-flex align-items-center" href="/faculty/dashboard">
                    <i class="bi bi-mortarboard me-2 text-white" style="font-size: 1.5rem;"></i>
                    <span class="fw-bold">Lab Exam Portal</span>
                </a>
            </div>
            
            <!-- User Menu -->
            <div class="dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
                   href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                    <img src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                         alt="Avatar" width="32" height="32" class="rounded-circle me-2" id="navbarAvatar">
                    <span class="d-none d-sm-inline">
                        <%= user.firstName %> <%= user.lastName %>
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="dropdown-header">
                            <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                            <small class="text-muted"><%= user.email %></small><br>
                            <span class="badge bg-success">Faculty</span>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/faculty/settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a></li>
                    <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="text-white mb-0">Faculty Portal</h5>
            <small class="text-white-50">Teaching Dashboard</small>
        </div>
        
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link active" href="/faculty/dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/faculty/attendance">
                    <i class="bi bi-clipboard-check"></i>
                    <span>Attendance</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/faculty/grading">
                    <i class="bi bi-journal-text"></i>
                    <span>Grading</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/faculty/results">
                    <i class="bi bi-bar-chart-line"></i>
                    <span>Results & Reports</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/faculty/students">
                    <i class="bi bi-people"></i>
                    <span>Student Management</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">
                            <i class="bi bi-mortarboard me-2"></i>
                            Faculty Dashboard
                        </h1>
                        <p class="page-subtitle">Welcome back, <%= user.firstName %>! Manage your classes and student assessments.</p>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex gap-2">
                            <span class="badge bg-success fs-6">
                                <i class="bi bi-calendar-date me-1"></i>
                                <%= moment().format('MMM DD, YYYY') %>
                            </span>
                            <% if (stats.pendingRequests > 0) { %>
                                <span class="badge bg-warning fs-6">
                                    <i class="bi bi-exclamation-triangle me-1"></i>
                                    <%= stats.pendingRequests %> Pending
                                </span>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Quick Stats -->
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card card-custom faculty-stat">
                        <div class="stat-icon bg-primary">
                            <i class="bi bi-book-half"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalClasses %></h3>
                            <p>Teaching Classes</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card card-custom faculty-stat">
                        <div class="stat-icon bg-success">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalStudents %></h3>
                            <p>Total Students</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card card-custom faculty-stat">
                        <div class="stat-icon bg-warning">
                            <i class="bi bi-calendar-event"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.totalUpcomingExams %></h3>
                            <p>Upcoming Exams</p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 mb-3">
                    <div class="stat-card card-custom faculty-stat">
                        <div class="stat-icon bg-info">
                            <i class="bi bi-hourglass-split"></i>
                        </div>
                        <div class="stat-content">
                            <h3><%= stats.pendingRequests %></h3>
                            <p>Pending Requests</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Main Content Row -->
            <div class="row">
                
                <!-- Left Column -->
                <div class="col-lg-8 mb-4">
                    
                    <!-- Today's Classes -->
                    <div class="card card-custom mb-4">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-calendar-day me-2"></i>
                                Today's Classes
                            </h5>
                            <a href="/faculty/attendance" class="btn btn-sm btn-outline-primary">
                                Mark Attendance <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (todaysClasses.length > 0) { %>
                                <% todaysClasses.forEach(cls => { %>
                                    <% const todaySchedule = cls.schedule.filter(s => s.dayOfWeek === moment().format('dddd')); %>
                                    <% todaySchedule.forEach(schedule => { %>
                                        <div class="class-session-item">
                                            <div class="row align-items-center">
                                                <div class="col-md-5">
                                                    <h6 class="mb-1"><%= cls.className %></h6>
                                                    <p class="text-muted small mb-0">
                                                        <%= cls.subject %> (<%= cls.classCode %>)
                                                    </p>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="time-info">
                                                        <i class="bi bi-clock text-primary me-1"></i>
                                                        <span><%= schedule.startTime %> - <%= schedule.endTime %></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-2">
                                                    <div class="venue-info">
                                                        <i class="bi bi-geo-alt text-success me-1"></i>
                                                        <span><%= schedule.room %></span>
                                                    </div>
                                                </div>
                                                <div class="col-md-2 text-end">
                                                    <a href="/faculty/attendance?classId=<%= cls._id %>&date=<%= moment().format('YYYY-MM-DD') %>" 
                                                       class="btn btn-sm btn-outline-success">
                                                        <i class="bi bi-check2-square"></i>
                                                    </a>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-calendar-x fs-1 mb-3"></i>
                                    <p>No classes scheduled for today</p>
                                    <small class="text-muted">Enjoy your day off!</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Upcoming Exams to Conduct -->
                    <div class="card card-custom">
                        <div class="card-header d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <i class="bi bi-clipboard-check me-2"></i>
                                Upcoming Exams to Conduct
                            </h5>
                            <a href="/faculty/grading" class="btn btn-sm btn-outline-primary">
                                View All <i class="bi bi-arrow-right ms-1"></i>
                            </a>
                        </div>
                        <div class="card-body">
                            <% if (upcomingExams.length > 0) { %>
                                <% upcomingExams.forEach(exam => { %>
                                    <div class="exam-conduct-item">
                                        <div class="row align-items-center">
                                            <div class="col-md-5">
                                                <h6 class="mb-1"><%= exam.title %></h6>
                                                <p class="text-muted small mb-0">
                                                    <%= exam.classId.className %> (<%= exam.classId.classCode %>)
                                                </p>
                                            </div>
                                            <div class="col-md-3">
                                                <span class="badge exam-type-badge bg-<%= exam.examType === 'ESE' ? 'danger' : exam.examType.includes('CIA') ? 'warning' : 'info' %>">
                                                    <%= exam.examType %>
                                                </span>
                                            </div>
                                            <div class="col-md-2">
                                                <small class="text-muted">
                                                    <%= moment(exam.scheduledDate).format('MMM DD') %><br>
                                                    <i class="bi bi-clock me-1"></i><%= exam.startTime %>
                                                </small>
                                            </div>
                                            <div class="col-md-2 text-end">
                                                <div class="dropdown">
                                                    <button class="btn btn-sm btn-outline-primary dropdown-toggle" 
                                                            type="button" data-bs-toggle="dropdown">
                                                        Actions
                                                    </button>
                                                    <ul class="dropdown-menu">
                                                        <li><a class="dropdown-item" href="/faculty/grading?classId=<%= exam.classId._id %>">
                                                            <i class="bi bi-pencil me-2"></i>Grade Exam
                                                        </a></li>
                                                        <li><a class="dropdown-item" href="/faculty/results?classId=<%= exam.classId._id %>">
                                                            <i class="bi bi-bar-chart me-2"></i>View Results
                                                        </a></li>
                                                    </ul>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% }); %>
                            <% } else { %>
                                <div class="text-center text-muted py-4">
                                    <i class="bi bi-calendar-check fs-1 mb-3"></i>
                                    <p>No upcoming exams to conduct</p>
                                    <small class="text-muted">All caught up!</small>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                </div>
                
                <!-- Right Column -->
                <div class="col-lg-4">
                    
                    <!-- Quick Actions -->
                    <div class="card card-custom mb-4">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-lightning me-2"></i>
                                Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a href="/faculty/attendance" class="btn btn-outline-primary">
                                    <i class="bi bi-clipboard-check me-2"></i>
                                    Mark Attendance
                                </a>
                                <a href="/faculty/grading" class="btn btn-outline-success">
                                    <i class="bi bi-journal-text me-2"></i>
                                    Grade Submissions
                                </a>
                                <a href="/faculty/results" class="btn btn-outline-info">
                                    <i class="bi bi-bar-chart-line me-2"></i>
                                    View Reports
                                </a>
                                <a href="/faculty/students" class="btn btn-outline-warning">
                                    <i class="bi bi-people me-2"></i>
                                    Manage Students
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Recent Grading Activity -->
                    <div class="card card-custom mb-4">
                        <div class="card-header">
                            <h6 class="mb-0">
                                <i class="bi bi-clock-history me-2"></i>
                                Recent Grading Activity
                            </h6>
                        </div>
                        <div class="card-body">
                            <% if (recentGrades.length > 0) { %>
                                <% recentGrades.slice(0, 5).forEach(grade => { %>
                                    <div class="activity-item">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="small mb-1"><%= grade.studentId.firstName %> <%= grade.studentId.lastName %></h6>
                                                <p class="small text-muted mb-0">
                                                    <%= grade.classId.classCode %> • 
                                                    <% if (grade.letterGrade) { %>
                                                        <span class="grade-badge-sm grade-<%= grade.letterGrade.replace('+', 'plus') %>">
                                                            <%= grade.letterGrade %>
                                                        </span>
                                                    <% } %>
                                                </p>
                                            </div>
                                            <small class="text-muted">
                                                <%= moment(grade.gradedAt).fromNow() %>
                                            </small>
                                        </div>
                                    </div>
                                <% }); %>
                                <div class="text-center mt-3">
                                    <a href="/faculty/results" class="btn btn-sm btn-outline-primary">
                                        View All Results
                                    </a>
                                </div>
                            <% } else { %>
                                <div class="text-center text-muted py-3">
                                    <i class="bi bi-journal-x"></i>
                                    <p class="small mb-0">No recent grading activity</p>
                                </div>
                            <% } %>
                        </div>
                    </div>
                    
                    <!-- Pending Student Requests -->
                    <% if (pendingRequests.length > 0) { %>
                        <div class="card card-custom">
                            <div class="card-header bg-warning bg-opacity-10">
                                <h6 class="mb-0 text-warning">
                                    <i class="bi bi-exclamation-triangle me-2"></i>
                                    Pending Student Requests
                                </h6>
                            </div>
                            <div class="card-body">
                                <% pendingRequests.slice(0, 3).forEach(request => { %>
                                    <div class="request-item">
                                        <div class="small">
                                            <strong><%= request.requestType === 'ADD_STUDENT' ? 'Add' : 'Remove' %></strong>
                                            <%= request.studentId.firstName %> <%= request.studentId.lastName %>
                                        </div>
                                        <div class="small text-muted">
                                            <%= request.classId.classCode %> • <%= moment(request.createdAt).fromNow() %>
                                        </div>
                                    </div>
                                <% }); %>
                                <div class="text-center mt-3">
                                    <a href="/faculty/students" class="btn btn-sm btn-warning">
                                        <i class="bi bi-list-check me-1"></i>
                                        Review All (<%= pendingRequests.length %>)
                                    </a>
                                </div>
                            </div>
                        </div>
                    <% } %>
                    
                </div>
                
            </div>
            
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    
    <script>
        // Logout confirmation
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        // Sidebar toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 992 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target)) {
                sidebar.classList.remove('show');
            }
        });
        
        // Add hover effects to action cards
        document.querySelectorAll('.stat-card.faculty-stat').forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-3px) scale(1.02)';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0) scale(1)';
            });
        });
        
        // Activity items animation
        document.querySelectorAll('.activity-item, .request-item').forEach((item, index) => {
            item.style.opacity = '0';
            item.style.transform = 'translateX(20px)';
            
            setTimeout(() => {
                item.style.transition = 'all 0.3s ease';
                item.style.opacity = '1';
                item.style.transform = 'translateX(0)';
            }, 100 + (index * 50));
        });
    </script>
    
</body>
</html>
