<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
    
    <style>
        .admin-stat-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border-radius: 15px;
            padding: 1.5rem;
            margin-bottom: 1rem;
            transition: transform 0.3s ease;
        }
        .admin-stat-card:hover {
            transform: translateY(-5px);
        }
        .admin-sidebar {
            background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);
        }
    </style>
</head>
<body class="dashboard-body">
    
    <!-- Navigation -->
<!-- Top Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-light d-lg-none me-2" type="button" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand d-flex align-items-center" href="/admin/dashboard">
                <i class="bi bi-shield-check me-2 text-warning" style="font-size: 1.5rem;"></i>
                <span class="fw-bold">Admin Portal</span>
            </a>
        </div>
        
        <!-- User Menu -->
        <div class="dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
               href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <img src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                     alt="Avatar" width="32" height="32" class="rounded-circle me-2">
                <span class="d-none d-sm-inline">
                    <%= user.firstName %> <%= user.lastName %>
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <div class="dropdown-header">
                        <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                        <small class="text-muted"><%= user.email %></small><br>
                        <span class="badge bg-danger">Admin</span>
                    </div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/admin/settings">
                    <i class="bi bi-gear me-2"></i>Settings
                </a></li>
                <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a></li>
            </ul>
        </div>
    </div>
</nav>
    
    <!-- Sidebar -->
<!-- Sidebar -->
<div class="sidebar" id="sidebar" style="background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);">
    <div class="sidebar-header">
        <h5 class="text-white mb-0">Admin Panel</h5>
        <small class="text-white-50">System Management</small>
    </div>
    
    <ul class="sidebar-nav">
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'faculty' ? 'active' : '' %>" href="/admin/faculty">
                <i class="bi bi-person-badge"></i>
                <span>Faculty Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'students' ? 'active' : '' %>" href="/admin/students">
                <i class="bi bi-people"></i>
                <span>Student Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'classes' ? 'active' : '' %>" href="/admin/classes">
                <i class="bi bi-book"></i>
                <span>Class Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'results' ? 'active' : '' %>" href="/admin/results">
                <i class="bi bi-bar-chart-line"></i>
                <span>Results Monitoring</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'attendance' ? 'active' : '' %>" href="/admin/attendance">
                <i class="bi bi-clipboard-check"></i>
                <span>Attendance Tracking</span>
            </a>
        </li>
    </ul>
</div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            
            <!-- Page Header -->
            <div class="page-header">
                <h1 class="page-title">
                    <i class="bi bi-speedometer2 me-2"></i>
                    Admin Dashboard
                </h1>
                <p class="page-subtitle">Monitor and manage the entire system</p>
            </div>
            
            <!-- Statistics Cards -->
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6">
                    <div class="admin-stat-card">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="mb-0"><%= stats.totalStudents %></h3>
                                <p class="mb-0">Total Students</p>
                            </div>
                            <i class="bi bi-people fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div class="admin-stat-card">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="mb-0"><%= stats.totalFaculty %></h3>
                                <p class="mb-0">Faculty Members</p>
                            </div>
                            <i class="bi bi-person-badge fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div class="admin-stat-card">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="mb-0"><%= stats.totalClasses %></h3>
                                <p class="mb-0">Active Classes</p>
                            </div>
                            <i class="bi bi-book fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
                
                <div class="col-lg-3 col-md-6">
                    <div class="admin-stat-card">
                        <div class="d-flex align-items-center">
                            <div class="flex-grow-1">
                                <h3 class="mb-0"><%= stats.passPercentage %>%</h3>
                                <p class="mb-0">Pass Rate</p>
                            </div>
                            <i class="bi bi-graph-up fs-1 opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Performance Overview -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-bar-chart me-2"></i>
                                Grade Distribution
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <% Object.entries(gradeDistribution).forEach(([grade, count]) => { %>
                                    <% if (count > 0) { %>
                                        <div class="col-md-3 mb-3">
                                            <div class="text-center">
                                                <div class="grade-circle grade-<%= grade.replace('+', 'plus') %> mx-auto mb-2">
                                                    <%= grade %>
                                                </div>
                                                <h6><%= count %></h6>
                                                <small class="text-muted">Students</small>
                                            </div>
                                        </div>
                                    <% } %>
                                <% }); %>
                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-4">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-exclamation-circle me-2"></i>
                                Quick Actions
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <% if (stats.pendingRequests > 0) { %>
                                    <a href="/admin/students" class="btn btn-warning">
                                        <i class="bi bi-clock me-2"></i>
                                        <%= stats.pendingRequests %> Pending Requests
                                    </a>
                                <% } %>
                                <a href="/admin/faculty" class="btn btn-primary">
                                    <i class="bi bi-person-plus me-2"></i>
                                    Add Faculty
                                </a>
                                <a href="/admin/classes" class="btn btn-success">
                                    <i class="bi bi-plus-circle me-2"></i>
                                    Create Class
                                </a>
                                <a href="/admin/results" class="btn btn-info">
                                    <i class="bi bi-file-earmark-text me-2"></i>
                                    View Reports
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>

    <script>
            function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
    </script>
</body>
</html>
