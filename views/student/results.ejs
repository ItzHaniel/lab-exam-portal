<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    
    <!-- Top Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary-custom fixed-top">
        <div class="container-fluid">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-light d-lg-none me-2" type="button" id="sidebarToggle">
                    <i class="bi bi-list"></i>
                </button>
                <a class="navbar-brand d-flex align-items-center" href="/student/dashboard">
                    <img src="/images/logo.png" alt="Logo" width="32" height="32" class="rounded-circle me-2">
                    <span class="fw-bold">Lab Exam Portal</span>
                </a>
            </div>
            
            <div class="dropdown">
                <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
                   href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                    <img src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                        alt="Avatar" width="32" height="32" class="rounded-circle me-2" id="navbarAvatar">
                    <span class="d-none d-sm-inline">
                        <%= user.firstName %> <%= user.lastName %>
                    </span>
                </a>
                <ul class="dropdown-menu dropdown-menu-end">
                    <li>
                        <div class="dropdown-header">
                            <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                            <small class="text-muted"><%= user.email %></small><br>
                            <span class="badge bg-primary"><%= user.role %></span>
                        </div>
                    </li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/student/settings">
                        <i class="bi bi-gear me-2"></i>Settings
                    </a></li>
                    <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </a></li>
                </ul>
            </div>
        </div>
    </nav>
    
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <h5 class="text-white mb-0">Student Portal</h5>
            <small class="text-white-50">Academic Dashboard</small>
        </div>
        
        <ul class="sidebar-nav">
            <li class="nav-item">
                <a class="nav-link" href="/student/dashboard">
                    <i class="bi bi-speedometer2"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/classes">
                    <i class="bi bi-book"></i>
                    <span>My Classes</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/exams">
                    <i class="bi bi-calendar-event"></i>
                    <span>Upcoming Exams</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/student/results">
                    <i class="bi bi-bar-chart"></i>
                    <span>Latest Results</span>
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/student/faculties">
                    <i class="bi bi-people"></i>
                    <span>Faculty Contacts</span>
                </a>
            </li>
        </ul>
    </div>
    
    <!-- Main Content -->
    <div class="main-content">
        <div class="content-wrapper">
            
            <!-- Page Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">
                            <i class="bi bi-bar-chart me-2"></i>
                            Latest Results
                        </h1>
                        <p class="page-subtitle">View your academic performance and grades</p>
                    </div>
                    <div class="col-auto">
                        <div class="d-flex gap-2">
                            <% 
                            let totalSubjects = 0;
                            let totalGradePoints = 0;
                            let totalCredits = 0;
                            Object.keys(groupedGrades).forEach(semesterKey => {
                                const semesterData = groupedGrades[semesterKey];
                                totalSubjects += semesterData.grades.length;
                                totalGradePoints += semesterData.totalGradePoints;
                                totalCredits += semesterData.totalCredits;
                            });
                            const overallCGPA = totalCredits > 0 ? (totalGradePoints / totalCredits).toFixed(2) : 'N/A';
                            %>
                            <div class="badge bg-success fs-6">
                                <i class="bi bi-star me-1"></i>
                                CGPA: <%= overallCGPA %>
                            </div>
                            <div class="badge bg-info fs-6">
                                <i class="bi bi-journal me-1"></i>
                                <%= totalSubjects %> Subjects
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Performance Summary -->
            <div class="row mb-4">
                <div class="col-12">
                    <div class="card card-custom">
                        <div class="card-header">
                            <h5 class="mb-0">
                                <i class="bi bi-graph-up me-2"></i>
                                Academic Performance Overview
                            </h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
                                    <div class="performance-stat">
                                        <div class="stat-icon bg-success">
                                            <i class="bi bi-trophy"></i>
                                        </div>
                                        <div class="stat-details">
                                            <h3 class="text-success"><%= overallCGPA %></h3>
                                            <p class="mb-0 small text-muted">Overall CGPA</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
                                    <div class="performance-stat">
                                        <div class="stat-icon bg-primary">
                                            <i class="bi bi-journal-bookmark"></i>
                                        </div>
                                        <div class="stat-details">
                                            <h3 class="text-primary"><%= totalSubjects %></h3>
                                            <p class="mb-0 small text-muted">Total Subjects</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6 mb-3 mb-md-0">
                                    <div class="performance-stat">
                                        <div class="stat-icon bg-warning">
                                            <i class="bi bi-calendar-range"></i>
                                        </div>
                                        <div class="stat-details">
                                            <h3 class="text-warning"><%= Object.keys(groupedGrades).length %></h3>
                                            <p class="mb-0 small text-muted">Semesters</p>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-6">
                                    <div class="performance-stat">
                                        <div class="stat-icon bg-info">
                                            <i class="bi bi-award"></i>
                                        </div>
                                        <div class="stat-details">
                                            <h3 class="text-info"><%= totalGradePoints %></h3>
                                            <p class="mb-0 small text-muted">Grade Points</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Semester-wise Results -->
            <% if (Object.keys(groupedGrades).length > 0) { %>
                <% Object.keys(groupedGrades).sort().reverse().forEach(semesterKey => { %>
                    <% const semesterData = groupedGrades[semesterKey]; %>
                    <div class="semester-section mb-4">
                        <div class="card card-custom">
                            
                            <!-- Semester Header -->
                            <div class="card-header semester-header">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <h5 class="mb-0 semester-title">
                                            <i class="bi bi-calendar-event me-2"></i>
                                            Semester <%= semesterData.semester %> - Year <%= semesterData.year %>
                                        </h5>
                                    </div>
                                    <div class="col-auto">
                                        <div class="semester-stats d-flex gap-3">
                                            <div class="stat-item">
                                                <span class="badge bg-success">
                                                    SGPA: <%= semesterData.sgpa %>
                                                </span>
                                            </div>
                                            <div class="stat-item">
                                                <span class="badge bg-info">
                                                    <%= semesterData.grades.length %> Subjects
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Semester Results -->
                            <div class="card-body">
                                <div class="row">
                                    <% semesterData.grades.forEach(grade => { %>
                                        <div class="col-lg-6 mb-4">
                                            <div class="grade-card">
                                                
                                                <!-- Subject Header -->
                                                <div class="grade-header">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <div>
                                                            <h6 class="subject-name mb-1">
                                                                <%= grade.classId.subject %>
                                                            </h6>
                                                            <small class="class-code text-muted">
                                                                <%= grade.classId.classCode %>
                                                            </small>
                                                        </div>
                                                        <div class="grade-display">
                                                            <% if (grade.letterGrade) { %>
                                                                <span class="grade-badge grade-<%= grade.letterGrade.replace('+', 'plus') %>">
                                                                    <%= grade.letterGrade %>
                                                                </span>
                                                            <% } else { %>
                                                                <span class="badge bg-secondary">Pending</span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                </div>
                                                
                                                <!-- Grade Breakdown -->
                                                <div class="grade-breakdown">
                                                    
                                                    <!-- CIA Marks -->
                                                    <div class="assessment-section">
                                                        <h6 class="assessment-title">
                                                            <i class="bi bi-clipboard-check me-1"></i>
                                                            Continuous Internal Assessment (CIA)
                                                        </h6>
                                                        <div class="assessment-grid">
                                                            <div class="assessment-item">
                                                                <span class="assessment-label">CIA 1:</span>
                                                                <span class="assessment-score">
                                                                    <%= grade.assessments.CIA1.marks || '-' %>/<%= grade.assessments.CIA1.maxMarks %>
                                                                </span>
                                                            </div>
                                                            <div class="assessment-item">
                                                                <span class="assessment-label">CIA 2:</span>
                                                                <span class="assessment-score">
                                                                    <%= grade.assessments.CIA2.marks || '-' %>/<%= grade.assessments.CIA2.maxMarks %>
                                                                </span>
                                                            </div>
                                                            <div class="assessment-item">
                                                                <span class="assessment-label">CIA 3:</span>
                                                                <span class="assessment-score">
                                                                    <%= grade.assessments.CIA3.marks || '-' %>/<%= grade.assessments.CIA3.maxMarks %>
                                                                </span>
                                                            </div>
                                                            <div class="assessment-item cia-total">
                                                                <span class="assessment-label"><strong>CIA Total:</strong></span>
                                                                <span class="assessment-score">
                                                                    <strong><%= grade.ciaTotal %>/40</strong>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- ESE Marks -->
                                                    <div class="assessment-section">
                                                        <h6 class="assessment-title">
                                                            <i class="bi bi-file-earmark-text me-1"></i>
                                                            End Semester Examination (ESE)
                                                        </h6>
                                                        <div class="assessment-grid">
                                                            <div class="assessment-item">
                                                                <span class="assessment-label">MSE:</span>
                                                                <span class="assessment-score">
                                                                    <%= grade.assessments.MSE.marks || '-' %>/<%= grade.assessments.MSE.maxMarks %>
                                                                </span>
                                                            </div>
                                                            <div class="assessment-item">
                                                                <span class="assessment-label">ESE:</span>
                                                                <span class="assessment-score">
                                                                    <%= grade.assessments.ESE.marks || '-' %>/<%= grade.assessments.ESE.maxMarks %>
                                                                </span>
                                                            </div>
                                                            <div class="assessment-item ese-total">
                                                                <span class="assessment-label"><strong>ESE Total:</strong></span>
                                                                <span class="assessment-score">
                                                                    <strong><%= grade.eseTotal %>/50</strong>
                                                                </span>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    
                                                    <!-- Practical Marks -->
                                                    <% if (grade.practicalMarks && grade.practicalMarks.length > 0) { %>
                                                        <div class="assessment-section">
                                                            <h6 class="assessment-title">
                                                                <i class="bi bi-gear me-1"></i>
                                                                Practical Assessment
                                                            </h6>
                                                            <div class="practical-experiments">
                                                                <% grade.practicalMarks.forEach(practical => { %>
                                                                    <div class="experiment-item">
                                                                        <div class="experiment-name">
                                                                            <%= practical.experimentName %>
                                                                        </div>
                                                                        <div class="experiment-scores">
                                                                            <span class="score-item">
                                                                                Observation: <%= practical.observation || '-' %>/5
                                                                            </span>
                                                                            <span class="score-item">
                                                                                Record: <%= practical.record || '-' %>/5
                                                                            </span>
                                                                        </div>
                                                                    </div>
                                                                <% }); %>
                                                                <div class="practical-total">
                                                                    <span class="assessment-label"><strong>Practical Total:</strong></span>
                                                                    <span class="assessment-score">
                                                                        <strong><%= grade.practicalTotal %>/10</strong>
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    <% } %>
                                                    
                                                    <!-- Final Grade -->
                                                    <div class="final-grade-section">
                                                        <div class="row">
                                                            <div class="col-6">
                                                                <div class="final-stat">
                                                                    <span class="final-label">Total Marks:</span>
                                                                    <span class="final-value">
                                                                        <%= grade.totalMarks || '-' %>/100
                                                                    </span>
                                                                </div>
                                                            </div>
                                                            <div class="col-6">
                                                                <div class="final-stat">
                                                                    <span class="final-label">Percentage:</span>
                                                                    <span class="final-value">
                                                                        <%= grade.percentage || '-' %>%
                                                                    </span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="grade-status mt-2">
                                                            <% if (grade.status) { %>
                                                                <span class="badge bg-<%= grade.status === 'Pass' ? 'success' : 'danger' %> me-2">
                                                                    <%= grade.status %>
                                                                </span>
                                                            <% } %>
                                                            <% if (grade.gradePoints !== null) { %>
                                                                <span class="badge bg-info">
                                                                    Grade Points: <%= grade.gradePoints %>/10
                                                                </span>
                                                            <% } %>
                                                        </div>
                                                    </div>
                                                    
                                                </div>
                                                
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                <% }); %>
            <% } else { %>
                <!-- Empty State -->
                <div class="card card-custom text-center py-5">
                    <div class="card-body">
                        <i class="bi bi-bar-chart text-muted" style="font-size: 4rem;"></i>
                        <h4 class="mt-4 text-muted">No Results Available</h4>
                        <p class="text-muted">
                            Your academic results will appear here once they are published by your faculty.
                            <br>Check back later or contact your faculty for updates.
                        </p>
                        <a href="/student/exams" class="btn btn-primary">
                            <i class="bi bi-calendar-event me-2"></i>
                            View Upcoming Exams
                        </a>
                    </div>
                </div>
            <% } %>
            
        </div>
    </div>
    
    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/dashboard.js"></script>
    
    <script>
        // Logout confirmation
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        // Sidebar toggle
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
        
        // Close sidebar when clicking outside on mobile
        document.addEventListener('click', function(e) {
            const sidebar = document.getElementById('sidebar');
            const toggle = document.getElementById('sidebarToggle');
            
            if (window.innerWidth < 992 && 
                !sidebar.contains(e.target) && 
                !toggle.contains(e.target)) {
                sidebar.classList.remove('show');
            }
        });
    </script>
    
</body>
</html>
