<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">
    <link href="/css/style.css" rel="stylesheet">
    <link href="/css/dashboard.css" rel="stylesheet">
</head>
<body class="dashboard-body">
    
    <!-- Top Navigation -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
    <div class="container-fluid">
        <div class="d-flex align-items-center">
            <button class="btn btn-outline-light d-lg-none me-2" type="button" id="sidebarToggle">
                <i class="bi bi-list"></i>
            </button>
            <a class="navbar-brand d-flex align-items-center" href="/admin/dashboard">
                <i class="bi bi-shield-check me-2 text-warning" style="font-size: 1.5rem;"></i>
                <span class="fw-bold">Admin Portal</span>
            </a>
        </div>
        
        <!-- User Menu -->
        <div class="dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-white" 
               href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
                <img src="<%= user.profileImage || '/images/default-avatar.png' %>" 
                     alt="Avatar" width="32" height="32" class="rounded-circle me-2">
                <span class="d-none d-sm-inline">
                    <%= user.firstName %> <%= user.lastName %>
                </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end">
                <li>
                    <div class="dropdown-header">
                        <strong><%= user.firstName %> <%= user.lastName %></strong><br>
                        <small class="text-muted"><%= user.email %></small><br>
                        <span class="badge bg-danger">Admin</span>
                    </div>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="/admin/settings">
                    <i class="bi bi-gear me-2"></i>Settings
                </a></li>
                <li><a class="dropdown-item" href="#" onclick="confirmLogout()">
                    <i class="bi bi-box-arrow-right me-2"></i>Logout
                </a></li>
            </ul>
        </div>
    </div>
</nav>

<!-- Sidebar -->
<div class="sidebar" id="sidebar" style="background: linear-gradient(180deg, #2c3e50 0%, #34495e 100%);">
    <div class="sidebar-header">
        <h5 class="text-white mb-0">Admin Panel</h5>
        <small class="text-white-50">System Management</small>
    </div>
    
    <ul class="sidebar-nav">
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'dashboard' ? 'active' : '' %>" href="/admin/dashboard">
                <i class="bi bi-speedometer2"></i>
                <span>Dashboard</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'faculty' ? 'active' : '' %>" href="/admin/faculty">
                <i class="bi bi-person-badge"></i>
                <span>Faculty Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'students' ? 'active' : '' %>" href="/admin/students">
                <i class="bi bi-people"></i>
                <span>Student Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'classes' ? 'active' : '' %>" href="/admin/classes">
                <i class="bi bi-book"></i>
                <span>Class Management</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'results' ? 'active' : '' %>" href="/admin/results">
                <i class="bi bi-bar-chart-line"></i>
                <span>Results Monitoring</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link <%= currentPage === 'attendance' ? 'active' : '' %>" href="/admin/attendance">
                <i class="bi bi-clipboard-check"></i>
                <span>Attendance Tracking</span>
            </a>
        </li>
    </ul>
</div>
    
    <div class="main-content">
        <div class="content-wrapper">
            
            <div class="page-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h1 class="page-title">
                            <i class="bi bi-clipboard-check me-2"></i>
                            Attendance Monitoring
                        </h1>
                        <p class="page-subtitle">Track attendance across all classes and sessions</p>
                    </div>
                    <div class="col-auto">
                        <button class="btn btn-success btn-sm" onclick="exportAttendance()">
                            <i class="bi bi-download me-1"></i>
                            Export Attendance
                        </button>
                    </div>
                </div>
            </div>
            
            <!-- Filters -->
            <div class="card mb-4">
                <div class="card-body py-3">
                    <form method="GET" class="row align-items-end">
                        <div class="col-md-2">
                            <label class="form-label">Filter by Status</label>
                            <select class="form-select" name="status" onchange="this.form.submit()">
                                <option value="all" <%= selectedStatus === 'all' ? 'selected' : '' %>>All</option>
                                <option value="Present" <%= selectedStatus === 'Present' ? 'selected' : '' %>>Present</option>
                                <option value="Absent" <%= selectedStatus === 'Absent' ? 'selected' : '' %>>Absent</option>
                            </select>
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Filter by Class</label>
                            <select class="form-select" name="classId" onchange="this.form.submit()">
                                <option value="">All Classes</option>
                                <% classes.forEach(cls => { %>
                                    <option value="<%= cls._id %>" <%= selectedClass === cls._id ? 'selected' : '' %>>
                                        <%= cls.className %> (<%= cls.classCode %>)
                                    </option>
                                <% }); %>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <label class="form-label">Date</label>
                            <input type="date" class="form-control" name="date" 
                                   value="<%= selectedDate || moment().format('YYYY-MM-DD') %>"
                                   onchange="this.form.submit()">
                        </div>
                        <div class="col-md-3">
                            <label class="form-label">Search Student</label>
                            <input type="text" class="form-control" placeholder="Search by name..." id="searchAttendance">
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-outline-secondary" onclick="clearFilters()">
                                <i class="bi bi-x-circle me-1"></i>
                                Clear
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            
            <!-- Attendance Stats -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card bg-primary text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h3><%= stats.total %></h3>
                                    <p class="mb-0">Total Records</p>
                                </div>
                                <i class="bi bi-clipboard-data fs-1 opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-success text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h3><%= stats.present %></h3>
                                    <p class="mb-0">Present</p>
                                </div>
                                <i class="bi bi-check-circle fs-1 opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-danger text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h3><%= stats.absent %></h3>
                                    <p class="mb-0">Absent</p>
                                </div>
                                <i class="bi bi-x-circle fs-1 opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="card bg-info text-white">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <div class="flex-grow-1">
                                    <h3><%= stats.attendanceRate %>%</h3>
                                    <p class="mb-0">Attendance Rate</p>
                                </div>
                                <i class="bi bi-percent fs-1 opacity-75"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <!-- Attendance Records -->
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col">
                            <h5 class="mb-0">
                                <i class="bi bi-table me-2"></i>
                                Attendance Records
                                <span class="badge bg-secondary ms-2"><%= attendanceRecords.length %></span>
                            </h5>
                            <% if (selectedDate) { %>
                                <small class="text-muted">
                                    Showing records for <%= moment(selectedDate).format('MMM DD, YYYY') %>
                                </small>
                            <% } %>
                        </div>
                        <div class="col-auto">
                            <div class="btn-group btn-group-sm">
                                <button class="btn btn-outline-primary" onclick="sortAttendance('student')">
                                    <i class="bi bi-sort-alpha-down me-1"></i>Student
                                </button>
                                <button class="btn btn-outline-primary" onclick="sortAttendance('class')">
                                    <i class="bi bi-book me-1"></i>Class
                                </button>
                                <button class="btn btn-outline-primary" onclick="sortAttendance('date')">
                                    <i class="bi bi-calendar me-1"></i>Date
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0" id="attendanceTable">
                            <thead class="table-light">
                                <tr>
                                    <th width="40">#</th>
                                    <th>Student</th>
                                    <th>Class</th>
                                    <th>Faculty</th>
                                    <th>Date</th>
                                    <th>Status</th>
                                    <th>Remarks</th>
                                    <th>Session Time</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (attendanceRecords && attendanceRecords.length > 0) { %>
                                    <% attendanceRecords.forEach((record, index) => { %>
                                        <tr class="attendance-row <%= record.status === 'Present' ? 'table-success-subtle' : 'table-danger-subtle' %>">
                                            <td><%= index + 1 %></td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= record.studentId.profileImage || '/images/default-avatar.png'%>" 
                                                         alt="Avatar" width="32" height="32" class="rounded-circle me-2">
                                                    <div>
                                                        <h6 class="mb-0"><%= record.studentId.firstName %> <%= record.studentId.lastName %></h6>
                                                        <small class="text-muted"><%= record.studentId.email %></small>
                                                    </div>
                                                </div>
                                            </td>
                                            <td>
                                                <div>
                                                    <strong class="small"><%= record.classId.className %></strong><br>
                                                    <small class="text-muted"><%= record.classId.classCode %></small>
                                                </div>
                                            </td>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="<%= record.facultyId.profileImage || '/images/default-avatar.png'%>" 
                                                         alt="Avatar" width="28" height="28" class="rounded-circle me-2">
                                                    <small><%= record.facultyId.firstName %> <%= record.facultyId.lastName %></small>
                                                </div>
                                            </td>
                                            <td>
                                                <small class="fw-bold"><%= moment(record.date).format('MMM DD') %></small><br>
                                                <small class="text-muted"><%= moment(record.date).format('YYYY') %></small>
                                            </td>
                                            <td>
                                                <span class="badge bg-<%= record.status === 'Present' ? 'success' : 'danger' %> fs-6">
                                                    <i class="bi bi-<%= record.status === 'Present' ? 'check-circle' : 'x-circle' %> me-1"></i>
                                                    <%= record.status %>
                                                </span>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= record.remarks || '-' %>
                                                </small>
                                            </td>
                                            <td>
                                                <small class="text-muted">
                                                    <%= moment(record.markedAt || record.createdAt).format('h:mm A') %>
                                                </small>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <button class="btn btn-outline-info" 
                                                            onclick="viewAttendanceDetails('<%= record._id %>')" 
                                                            title="View Details">
                                                        <i class="bi bi-eye"></i>
                                                    </button>
                                                    <button class="btn btn-outline-warning" 
                                                            onclick="editAttendance('<%= record._id %>')" 
                                                            title="Edit">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="9" class="text-center py-4">
                                            <i class="bi bi-calendar-x text-muted" style="font-size: 2rem;"></i>
                                            <h6 class="text-muted mt-2">No attendance records found</h6>
                                            <p class="text-muted">Try adjusting your filters or date range.</p>
                                        </td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
                <% if (attendanceRecords && attendanceRecords.length > 0) { %>
                    <div class="card-footer">
                        <div class="row align-items-center">
                            <div class="col">
                                <small class="text-muted">
                                    Showing <%= attendanceRecords.length %> records â€¢ 
                                    Attendance rate: <%= stats.attendanceRate %>%
                                    <% if (selectedDate) { %>
                                        for <%= moment(selectedDate).format('MMM DD, YYYY') %>
                                    <% } %>
                                </small>
                            </div>
                            <div class="col-auto">
                                <div class="btn-group btn-group-sm">
                                    <button class="btn btn-success" onclick="exportFilteredAttendance()">
                                        <i class="bi bi-download me-1"></i>
                                        Export Filtered
                                    </button>
                                    <button class="btn btn-info" onclick="generateAttendanceReport()">
                                        <i class="bi bi-file-text me-1"></i>
                                        Generate Report
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
            
        </div>
    </div>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function sortAttendance(criteria) {
            const table = document.getElementById('attendanceTable');
            const tbody = table.querySelector('tbody');
            const rows = Array.from(tbody.querySelectorAll('.attendance-row'));
            
            rows.sort((a, b) => {
                const cells = {
                    a: a.querySelectorAll('td'),
                    b: b.querySelectorAll('td')
                };
                
                switch (criteria) {
                    case 'student':
                        const nameA = cells.a[1].querySelector('h6').textContent.trim();
                        const nameB = cells.b[1].querySelector('h6').textContent.trim();
                        return nameA.localeCompare(nameB);
                        
                    case 'class':
                        const classA = cells.a[2].textContent.trim();
                        const classB = cells.b[2].textContent.trim();
                        return classA.localeCompare(classB);
                        
                    case 'date':
                        const dateA = cells.a[4].textContent.trim();
                        const dateB = cells.b[4].textContent.trim();
                        return dateB.localeCompare(dateA); // Latest first
                        
                    default:
                        return 0;
                }
            });
            
            // Re-append sorted rows and update numbers
            rows.forEach((row, index) => {
                row.querySelector('td:first-child').textContent = index + 1;
                tbody.appendChild(row);
            });
            
            showToast(`Sorted by ${criteria}`, 'info');
        }
        
        function clearFilters() {
            window.location.href = '/admin/attendance';
        }
        
        function viewAttendanceDetails(attendanceId) {
            alert('View attendance details - Feature coming soon!');
        }
        
        function editAttendance(attendanceId) {
            alert('Edit attendance - Feature coming soon!');
        }
        
        function exportAttendance() {
            alert('Export all attendance - Feature coming soon!');
        }
        
        function exportFilteredAttendance() {
            alert('Export filtered attendance - Feature coming soon!');
        }
        
        function generateAttendanceReport() {
            alert('Generate attendance report - Feature coming soon!');
        }
        
        function confirmLogout() {
            if (confirm('Are you sure you want to logout?')) {
                window.location.href = '/auth/logout';
            }
        }
        
        function showToast(message, type = 'info') {
            const toast = document.createElement('div');
            toast.className = `alert alert-${type} alert-dismissible fade show position-fixed`;
            toast.style.cssText = `
                top: 80px;
                right: 20px;
                z-index: 9999;
                min-width: 300px;
                box-shadow: 0 8px 25px rgba(0,0,0,0.15);
            `;
            
            toast.innerHTML = `
                <i class="bi bi-info-circle me-2"></i>
                ${message}
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            `;
            
            document.body.appendChild(toast);
            
            setTimeout(() => {
                const bsAlert = new bootstrap.Alert(toast);
                bsAlert.close();
            }, 3000);
        }
        
        // Search functionality
        document.getElementById('searchAttendance')?.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            const rows = document.querySelectorAll('.attendance-row');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
        
        document.getElementById('sidebarToggle')?.addEventListener('click', function() {
            document.getElementById('sidebar').classList.toggle('show');
        });
    </script>
</body>
</html>
